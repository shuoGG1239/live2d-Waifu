{
  "name": "liv2d-waifu",
  "version": "0.1.0",
  "description": "纸片人老婆",
  "author": "shuoGG",
  "main": "main.js",
  "scripts": {
    "build-main": "npx webpack --config main.webpack.config.js",
    "watch-main": "npx webpack --watch --config main.webpack.config.js",
    "build-framework": "npx webpack --config framework.webpack.config.js",
    "watch-framework": "npx webpack --watch --config framework.webpack.config.js",
    "build-all": "npm-run-all build-framework build-main",
    "watch-all": "npm-run-all watch-framework watch-main",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "productName": "liv2d-waifu",
    "appId": "com.shuogg.live2dwaifu",
    "directories": {
      "output": "build"
    },
    "files": [
      "assets/",
      "index.html",
      "main.js",
      "node_modules/",
      "package.json",
      "resources/",
      "core/",
      "dist/"
    ],
    "win": {
      "icon": "Assets/icon.ico"
    },
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    }
  },
  "devDependencies": {
    "glob": "^7.1.4",
    "npm-run-all": "^4.1.5",
    "serve": "^11.1.0",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.3",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "electron": "^7.0.0",
    "electron-builder": "^21.2.0"
  },
  "dependencies": {
    "whatwg-fetch": "^3.0.0"
  },
  "private": true
}
